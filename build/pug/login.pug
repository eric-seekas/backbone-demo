//- login.pug

extends ./pug-tpl/layout

block title
    title 登录
block content
    div.views
        div.view
            div.pages
                div.page
                    div.page-content
                        div.login-screen-title.pad_t--35 路金宝
                        form
                            div.list-block
                                ul
                                    li.item-content
                                        div.item-inner
                                            div.item-input
                                                input(
                                                    type='text'
                                                    name='username'
                                                    placeholder = '用户名'
                                                )
                                    li.item-content
                                        div.item-inner
                                            div.item-input
                                                input(
                                                type='password'
                                                name='password'
                                                placeholder = '密码'
                                                )
                            div.content-block
                                a.button.button-big.button-fill(type='button') 登录
                            div.content-block
                                div.row
                                    div.col-auto
                                        a.button.button-fill.color-green(type='button') 快速注册
                                    div.col-auto
                                        a.button.button-fill.color-red(type='button') 忘记密码
                    div.toolbar.tabbar.tabbar-labels
                        div.toolbar-inner
                            a.tab-link(href='#')
                                i.f7-icons home
                                span.tabbar-label 主页
                            a.tab-link(href='#')
                                i.f7-icons data
                                span.tabbar-label 服务
                            a.tab-link(href='#')
                                i.f7-icons person
                                span.tabbar-label 我