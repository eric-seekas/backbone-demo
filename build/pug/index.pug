//- index.pug

extends ./pug-tpl/layout

block title
    title 首页
block content
    div.views
        div.view
            div.pages
                div.page
                    div.page-content
                        div.content-block.row
                            a.col-auto.semicircle-left(href='#')
                                span.pos_a.semicircle-text.modal-title.dis_inb.width--100 我要加油
                            a.col-auto.semicircle-right(href='#')
                                span.pos_a.semicircle-text.modal-title.dis_inb.width--100 我要加汽
                        div.row
                            div.swiper-container
                                div.swiper-wrapper
                                    div.swiper-slide Slide 1
                                    div.swiper-slide Slide 2
                                    div.swiper-slide Slide 3
                    div.toolbar.tabbar.tabbar-labels
                        div.toolbar-inner
                            a.tab-link(href='#')
                                i.f7-icons home
                                span.tabbar-label 主页
                            a.tab-link(href='#')
                                i.f7-icons data
                                span.tabbar-label 服务
                            a.tab-link(href='#')
                                i.f7-icons person
                                span.tabbar-label 我
block append jsSrc
    script(src='./js/index.js')